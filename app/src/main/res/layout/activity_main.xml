<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0C4DE"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:weightSum="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_weight="1"
            android:weightSum="1">

            <TextView
                android:id="@+id/screenMain"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F0F8FF"
                android:gravity="center_vertical|end"
                android:textSize="34sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginVertical="6dp"
            android:layout_weight="1"
            android:weightSum="2">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">

                <SeekBar
                    android:id="@+id/seekBarOou"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:max="2"
                    android:progress="1"
                    android:progressBackgroundTint="#000000"
                    android:progressTint="#00FFFFFF"
                    android:thumbTint="#4682B4" />

                <TextView
                    android:id="@+id/screenOou"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F0F8FF"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">

                <SeekBar
                    android:id="@+id/seekBarDot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:max="3"
                    android:progressBackgroundTint="#000000"
                    android:progressTint="#00FFFFFF"
                    android:thumbTint="#4682B4" />

                <TextView
                    android:id="@+id/screenDot"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F0F8FF"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/buttonClear"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonClearText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Space
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonNeg"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonNegText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonBS"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonBSText"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginVertical="6dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/buttonMR"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonMRText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonMW"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonMWText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonPowTwo"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonPowTwoText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonSqrt"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonSqrtText"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/buttonSeven"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button7Text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonEight"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button8Text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonNine"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button9Text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonDiv"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonDivText"
                android:textSize="24sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_marginVertical="6dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/buttonFour"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button4Text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonFive"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button5Text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonSix"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button6Text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonMul"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonMulText"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/buttonOne"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button1Text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonTwo"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button2Text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonThree"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button3Text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonSub"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonSubText"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/buttonZero"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button0Text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonDot"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonDotText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonEqual"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonEqualText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonAdd"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:backgroundTint="#4682B4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/buttonAddText"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>